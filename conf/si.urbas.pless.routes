# Home page
GET   /                    si.urbas.pless.WelcomeController.welcome()

# Authentication Routes
POST  /api/auth/login      si.urbas.pless.authentication.PasswordAuthenticationController.logIn(email, password)
POST  /api/auth/logout     si.urbas.pless.authentication.AuthenticationController.logOut()
POST  /api/auth/status     si.urbas.pless.authentication.AuthenticationController.status()

# User Management Routes
POST  /api/user/signup     si.urbas.pless.users.UserController.signUp(email, password)
POST  /api/user/activate   si.urbas.pless.users.UserController.activate(email, activationCode)
POST  /api/user/delete     si.urbas.pless.users.UserController.delete()

# Map static resources from the /public folder to the /assets URL path
GET   /assets/*file    controllers.Assets.at(path="/public", file)